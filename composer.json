{
	"require": {
        "php-di/php-di": "*",
        "ocramius/proxy-manager": "*"
	},
    "require-dev": {
		"squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "TMD\\OrderOfMass\\": "src/"
        }
    },
    "scripts": {
        "qa": [
            "phpcs --standard=phpcs.xml.dist --",
            "phpcbf --standard=phpcs.xml.dist --",
            "psalm --no-diff"
        ],
        "qa-full": [
            "phpcs --standard=phpcs.xml.dist --",
            "phpcbf --standard=phpcs.xml.dist --",
            "psalm --show-info=true --no-diff"
        ],
        "docs": [
            "php phpDocumentor.phar",
            "php libs-dev/phpdoc-md/bin/phpdocmd .docs/structure.xml ../mass-wiki/phpdoc"
        ]
    }
}
