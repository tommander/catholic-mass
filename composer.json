{
	"require": {
        "php-di/php-di": "*",
        "ocramius/proxy-manager": "*"
	},
    "require-dev": {
		"squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "*",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "TMD\\OrderOfMass\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml.dist",
        "phpcbf": "phpcbf --standard=phpcs.xml.dist",
        "psalm": "psalm --no-diff",
        "phpdoc": "php phpDocumentor.phar",
        "phpdocmd": "php libs-dev/phpdoc-md/bin/phpdocmd .docs/structure.xml ../mass-wiki/phpdoc",
        "phpunit": "phpunit tests",
        "qa": [
            "@phpcs",
            "@phpcbf",
            "@psalm",
            "@phpunit"
        ],
        "qa-full": [
            "@phpcs",
            "@phpcbf",
            "@psalm --show-info=true",
            "@phpunit"
        ],
        "docs": [
            "@phpdoc",
            "@phpdocmd"
        ]
    }
}
