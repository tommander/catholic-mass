{
	"require": {
        "php-di/php-di": "*",
        "ocramius/proxy-manager": "*"
	},
    "require-dev": {
		"squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "*",
        "evert/phpdoc-md": "*"
    },
    "autoload": {
        "psr-4": {
            "TMD\\OrderOfMass\\": "src/"
        }
    },
    "scripts": {
        "qa": [
            "phpcs --standard=phpcs.xml.dist --",
            "phpcbf --standard=phpcs.xml.dist --",
            "psalm"
        ],
        "docs": [
            "php phpDocumentor.phar",
            "phpdocmd .docs/structure.xml ../mass-wiki/phpdoc"
        ]
    }
}
